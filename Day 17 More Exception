

//Write your code here
class Calculator{

    public int power(int n, int p) throws Exception {
        // TODO Auto-generated method stub
        int ans=n;
            if (n>= 0 && p>=0){
                for (int i = 1; i < p; i++) {
                    ans=ans*n;
                }
             if(p==0)
                ans= 1;
            
    }else
                throw new  Exception("n and p should be non-negative");
        return ans;
    }
    
}

